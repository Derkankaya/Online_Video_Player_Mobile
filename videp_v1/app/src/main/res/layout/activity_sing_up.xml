<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".SingUpActivity">
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="30dp"
            app:cardCornerRadius="30dp"
            app:cardElevation="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="693dp"
                android:layout_gravity="center_horizontal"
                android:orientation="vertical"
                android:padding="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="73dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/singup_videp_logo"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:padding="8dp"
                        android:scaleType="center"
                        android:src="@mipmap/videp_logo_icon_foreground" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Üye ol"
                        android:textAlignment="center"
                        android:textColor="@color/turquaz"
                        android:textSize="40sp"
                        android:textStyle="bold" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:padding="8dp"
                        android:scaleType="centerInside"
                        android:src="@mipmap/account_icon_foreground" />

                    <EditText
                        android:id="@+id/singupFirstName"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginTop="20dp"
                        android:drawablePadding="8dp"
                        android:hint="İsim"
                        android:padding="8dp"
                        android:textColor="@color/black" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:padding="8dp"
                        android:scaleType="centerInside"
                        android:src="@mipmap/account_icon_foreground" />

                    <EditText
                        android:id="@+id/singupLastName"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginTop="20dp"
                        android:drawablePadding="8dp"
                        android:hint="Soyisim"
                        android:padding="8dp"
                        android:textColor="@color/black" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="129dp"
                        android:layout_height="match_parent"
                        android:padding="5dp"
                        android:scaleType="centerInside"
                        android:src="@mipmap/et_icon_foreground" />

                    <EditText
                        android:id="@+id/singupEmail"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginTop="20dp"
                        android:drawablePadding="8dp"
                        android:hint="Email"
                        android:padding="8dp"
                        android:textColor="@color/peruBrown" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:padding="8dp"
                        android:scaleType="centerInside"
                        android:src="@mipmap/lock_icon_foreground" />

                    <EditText
                        android:id="@+id/singupPassword"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginTop="20dp"
                        android:drawablePadding="8dp"
                        android:hint="Şifre"
                        android:padding="8dp"
                        android:textColor="@color/sandyBrown" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="70dp"
                        android:padding="8dp"
                        android:scaleType="centerInside"
                        android:src="@mipmap/job_icon_foreground" />

                    <EditText
                        android:id="@+id/singupUserName"
                        android:layout_width="207dp"
                        android:layout_height="50dp"
                        android:layout_marginTop="20dp"
                        android:drawablePadding="8dp"
                        android:hint="Kullanıcı adı"
                        android:padding="8dp"
                        android:textColor="@color/redBrown" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="70dp"
                        android:padding="5dp"
                        android:scaleType="centerInside"
                        android:src="@mipmap/university_icon_foreground" />

                    <EditText
                        android:id="@+id/singupFacultyOfUniversityName"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginTop="20dp"
                        android:drawablePadding="8dp"
                        android:hint="Fakülte/Üniversite"
                        android:padding="8dp"
                        android:textColor="@color/peruBrown" />

                </LinearLayout>

                <Button
                    android:id="@+id/singup_button"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginTop="30dp"
                    android:backgroundTint="@color/turquaz"
                    android:text="Üye ol"
                    android:textColor="@color/white"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/loginRedirectText"
                    android:layout_width="202dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:text="Zaten üyeyim"
                    android:textAlignment="center"
                    android:textColor="@color/medturquaz"
                    android:textSize="18sp" />


            </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>